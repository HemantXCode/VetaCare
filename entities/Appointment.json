{
  "name": "Appointment",
  "type": "object",
  "properties": {
    "patient_id": {
      "type": "string",
      "description": "Reference to patient"
    },
    "doctor_name": {
      "type": "string",
      "description": "Name of the doctor"
    },
    "doctor_specialty": {
      "type": "string",
      "description": "Doctor's specialty"
    },
    "hospital": {
      "type": "string",
      "description": "Hospital or clinic name"
    },
    "appointment_type": {
      "type": "string",
      "enum": [
        "in_person",
        "video"
      ],
      "description": "Type of appointment"
    },
    "appointment_date": {
      "type": "string",
      "format": "date",
      "description": "Date of appointment"
    },
    "appointment_time": {
      "type": "string",
      "description": "Time slot"
    },
    "symptoms": {
      "type": "string",
      "description": "Patient symptoms or problem description"
    },
    "status": {
      "type": "string",
      "enum": [
        "confirmed",
        "pending",
        "completed",
        "cancelled"
      ],
      "default": "confirmed"
    },
    "consultation_fee": {
      "type": "number",
      "description": "Fee for consultation"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes"
    }
  },
  "required": [
    "patient_id",
    "doctor_name",
    "appointment_date",
    "appointment_time"
  ]
}